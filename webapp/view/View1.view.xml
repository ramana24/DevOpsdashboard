	xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns="sap.m" xmlns:common="sap.ui.commons">
	<Shell id="shell">
		<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<VBox id="TileContainer">
												<HBox>
													<f:SimpleForm minWidth="1024px"
														maxContainerCols="4" layout="ResponsiveLayout">
														<VBox>


															<HBox class="sapUiTinyMarginBottom">


																<!--CRM TILE -->
																<f:SimpleForm id="crmtile" class="equalColumns1"
																	maxContainerCols="1" title="CRM" editable="false"
																	layout="ResponsiveLayout">
																	<VBox id="crmcontainer">

																		<HBox>
																			<Text class="sapUiMediumMarginTop sapUiSmallMarginBegin"
																				text="Queue Depth"></Text>
																			<NumericContent id="crmqd"
																				class="sapUiTinyMarginBegin sapUiTinyMarginTop"
																				value="{oCRMModel>/d/results/0/StockQuantity}"
																				valueColor="Critical"							indicator="None" withMargin="false" state="Loaded"
																				press="onOpenQueueDialog" />
																		</HBox>

																		<List id= "crmlist" class="sapUiTinyMarginBottom" >

																			<StandardListItem id="crmsys" title="System Errors" 	type="Active" 
					
						                                                        press="onOpenSystemDialog"
																				info="{oCRMModel>/d/results/0/DimensionHeight}"
																				infoState="Error"  />

																			<StandardListItem id="crmapp" title="App Errors" type="Active"
					
						                                                        press="onOpenAppDialog"
																				info="{oCRMModel>/d/results/0/DimensionWidth}"
																				infoState="Error" />

																			<StandardListItem title="No of Threads"
																				info="{oCRMModel>/d/results/0/DimensionDepth}"
																				infoState="None" />
																		
																		</List>

																		<HBox>
																			<Label class="sapUiSmallMarginBegin" text="Updated at:"></Label>
																			 <Text
																				text="{oCRMModel>/d/results/0/LastModified}"></Text> 
																		<!-- <Text text="{
                                                                                         path: '/oCRMModel>/d/results/0/LastModified',
                                                                                         type: 'sap.ui.model.type.Date',
                                                                                         formatOptions: {
                                                                                            source: {pattern: 'yyyy-MM-dd'},
                                                                                            style: 'long'
                                                                                                          }
                                                                                    }"> </Text> -->
                                                                        </HBox>
																	</VBox>
																</f:SimpleForm>

																<!-- ECC -->
																<f:SimpleForm id="ecctile" class="equalColumns2"
																	maxContainerCols="1" title="ECC" editable="false"
																	layout="ResponsiveLayout">
																	<VBox id="ecccontainer">
																		<HBox>
																			<Text class="sapUiMediumMarginTop sapUiSmallMarginBegin"
																				text="Queue Depth"></Text>
																			<NumericContent id="QdepthECC"
																				class="sapUiMediumMarginBegin sapUiTinyMarginTop"
																				value="{oECCModel>/d/results/1/StockQuantity}"
																				valueColor="Critical"
																				indicator="None" withMargin="false" state="Loaded"
																				press="onOpenECCQueueDialog"/>
																		</HBox>

																		<List class="sapUiTinyMarginBottom" 
																			headerText="">
																			<StandardListItem id="eccsys" title="System Errors" type="Active" 
					
						press="onOpenECCSystemDialog"
																				info="{oECCModel>/d/results/1/DimensionHeight}"
																				infoState="Warning" />
																			<StandardListItem id="eccapp" title="App Errors"  type="Active"
					
						press="onOpenECCAppDialog"
																				info="{oECCModel>/d/results/1/DimensionDepth}"
																				infoState="Warning" />
																			<StandardListItem title="No of Threads"
																				info="{oECCModel>/d/results/1/DimensionWidth}"
																				infoState="None" />

																		</List>

																		<HBox>
																			<Label class="sapUiSmallMarginBegin" text="Updated at:  "></Label>
																			<Text
																				text="{oECCModel>/d/results/1/LastModified}"></Text>
																		</HBox>

																	</VBox>

																</f:SimpleForm>

																<!-- BW -->
																<f:SimpleForm id="bwtile" class="equalColumns3"
																	maxContainerCols="1" title="BIW" editable="false"
